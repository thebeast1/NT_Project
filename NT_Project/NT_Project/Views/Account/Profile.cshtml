@model NT_Project.Models.ApplicationUser
@using NT_Project.Models
<style>
    .devDesgin {
        color: black;
        font-size: 1.3em;
        margin-top: 1em;
        padding-top: 0.5em;
        padding-bottom: 0.5em;
        padding-left: 1em;
        padding-right: 1em;
        border-radius: 10px;
    }

    .panel.panel--styled {
        background: #F4F2F3;
    }

    .panelTop {
        padding: 30px;
    }

    .panelBottom {
        border-top: 1px solid #990000;
        padding-top: 20px;
    }

    .btn-add-to-cart {
        background: #990000;
        color: #fff;
    }

    .btn.btn-add-to-cart.focus, .btn.btn-add-to-cart:focus, .btn.btn-add-to-cart:hover {
        color: #fff;
        background: #FD7172;
        outline: none;
    }

    .btn-add-to-cart:active {
        background: #F9494B;
        outline: none;
    }


    span.itemPrice {
        font-size: 24px;
        color: #990000;
    }


    /*----------------------
    ##star Rating Styles
    ----------------------*/
    .stars {
        padding-top: 10px;
        width: 100%;
        display: inline-block;
    }

    span.glyphicon {
        padding: 5px;
    }

    .glyphicon-star-empty {
        color: #9d9d9d;
    }

    .glyphicon-star-empty, .glyphicon-star {
        font-size: 18px;
    }

    .glyphicon-star {
        color: #FD4;
        transition: all .25s;
    }

        .glyphicon-star:hover {
            transform: rotate(-15deg) scale(1.3);
        }



    body {
        padding: 30px 0px 60px;
    }

    .panel > .list-group .list-group-item:first-child {
        /*border-top: 1px solid rgb(204, 204, 204);*/
    }

    .block {
        display: block !important;
        width: 100%;
        height: 1px !important;
    }

    

    #back-to-bootsnipp {
        position: fixed;
        top: 10px;
        right: 10px;
    }


    .c-search > .form-control {
        border-radius: 0px;
        border-width: 0px;
        border-bottom-width: 1px;
        font-size: 1.3em;
        padding: 12px 12px;
        height: 44px;
        outline: none !important;
    }

        .c-search > .form-control:focus {
            outline: 0px !important;
            -webkit-appearance: none;
            box-shadow: none;
        }

    .c-search > .input-group-btn .btn {
        border-radius: 0px;
        border-width: 0px;
        border-left-width: 1px;
        border-bottom-width: 1px;
        height: 44px;
    }


    .c-list {
        padding: 0px;
        min-height: 44px;
    }

    .title {
        display: inline-block;
        font-size: 1.7em;
        font-weight: bold;
        padding: 5px 15px;
    }

    ul.c-controls {
        list-style: none;
        margin: 0px;
        min-height: 44px;
    }

        ul.c-controls li {
            margin-top: 8px;
            float: left;
        }

            ul.c-controls li a {
                font-size: 1.7em;
                padding: 11px 10px 6px;
            }

                ul.c-controls li a i {
                    min-width: 24px;
                    text-align: center;
                }

                ul.c-controls li a:hover {
                    background-color: rgba(51, 51, 51, 0.2);
                }

    .c-toggle {
        font-size: 1.7em;
    }

    .name {
        font-size: 1.7em;
        font-weight: 700;
    }

    .c-info {
        padding: 5px 10px;
        font-size: 1.25em;
    }

    #leftbox {
        float: left;
        width: 25%;
        height: 280px;
    }

    #midletbox {
        float: left;
        width: 50%;
        height: 280px;
    }

    #rightbox {
        float: right;
        width: 25%;
        height: 280px;
    }
</style>
@{
    var posts = ViewBag.Posts;
    var friends = ViewBag.Friends;
}


<div>

    <div class="devDesgin" >
        <center>
            <div class="devDesgin" style="margin-top:5px;background-color:#ffffff;width:300px;">
                <div>
                    @if (Model.Photo_Url != null)
                    {
                        <img src="@Url.Content(Model.Photo_Url)" alt="IMAGES " style="border-radius: 50%;height: 200px;width: 200px;" />
                    }
                        <a href='@Url.Action("Update_profile", "Home")'>
                            <img src="~/pen.png" alt="IMAGES " style="height: 50px;width: 50px;" />
                        </a>
                </div>
                @{
                    <h3>@Model.FullName</h3>
                    <h4>@Model.Bio</h4>
                    <h4>@Model.PhoneNumber</h4>

                    
                   
                }

            </div>
        </center>
    </div>
    </div>
        <div>
    <br />
    <div id="rightbox" style="margin-top: 1em;">
        <div>
            <div class="panel panel-default">
                <div class="panel-heading c-list">
                    <span class="title">Friends</span>
                </div>
                <ul class="list-group" id="contact-list">
                    @{
                        foreach (ApplicationUser user in friends)
                        {

                    <li class="list-group-item">
                        <a href='@Url.Action("Profile", "Account",new {  cur_id = user.Id.ToString() })'>

                            <div>
                                @if (user.Photo_Url.ToString() != null)
                                {
                                    <img src="@Url.Content(user.Photo_Url.ToString())" alt="IMAGES" class="img-responsive img-circle" style="width:130px;height:130px;">
                                }

                            </div>
                            <div>
                                <span class="name">@user.FullName</span><br />
                            </div>
                            <div class="clearfix"></div>
                        </a>
                    </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>

    <div id="leftbox">
        @foreach (Post item in posts)
        {

            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                        <div class="panel panel-default  panel--styled">
                            <div class="panel-body">
                                <div class="col-md-12 panelTop">
                                    <div class="col-md-4">
                                        @if (item.pic.ToString() != null)
                                        {
                                            <img src="@Url.Content(item.pic.ToString())" alt="IMAGES" height="200" width="200" />
                                        }

                                    </div>
                                    <div class="col-md-8">
                                        <h2>@Html.DisplayFor(modelItem => item.name)</h2>
                                        <div style="margin-left:7px;font-size:small;">@Html.DisplayFor(modelItem => item.post_date)</div>
                                        <p style="padding:20px;">@Html.DisplayFor(modelItem => item.post_message)</p>
                                        @if (item.url != null)
                                        {
                                            <img src="@Url.Content(item.url.ToString())" alt="IMAGES" height="200" width="200" />
                                        }

                                    </div>
                                </div>

                                <div class="col-md-12 panelBottom">
                                    <div class="col-md-4 text-center">
                                        @using (Html.BeginForm("Index", "Comments", new { id = item.id }, FormMethod.Post, null))
                                        {
                                            <button class="btn btn-lg btn-add-to-cart" type="submit" style="margin-top:10px;">View Comments</button>
                                        }

                                    </div>
                                    <div class="col-md-4 text-left">
                                        @using (Html.BeginForm("Create", "Comments", new { id = item.id }, FormMethod.Post, null))
                                        {
                                            <button class="btn btn-lg btn-add-to-cart" type="submit" style="margin-top:10px;">Add Comment</button>
                                        }
                                    </div>
                                    <div class="col-md-4">
                                        <div class="stars">
                                            <h5>@Html.DisplayFor(modelItem => item.no_of_comms) Comments</h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


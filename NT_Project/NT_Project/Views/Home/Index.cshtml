@model IEnumerable<NT_Project.Models.Post>
@{
    ViewBag.Title = "Home Page";
}
<style>
    .panel.panel--styled {
        background: #F4F2F3;
    }

    .panelTop {
        padding: 30px;
    }

    .panelBottom {
        border-top: 1px solid #990000;
        padding-top: 20px;
    }

    .btn-add-to-cart {
        background: #990000;
        color: #fff;
    }

    .btn.btn-add-to-cart.focus, .btn.btn-add-to-cart:focus, .btn.btn-add-to-cart:hover {
        color: #fff;
        background: #FD7172;
        outline: none;
    }

    .btn-add-to-cart:active {
        background: #F9494B;
        outline: none;
    }


    span.itemPrice {
        font-size: 24px;
        color: #990000;
    }


    /*----------------------
    ##star Rating Styles
    ----------------------*/
    .stars {
        padding-top: 10px;
        width: 100%;
        display: inline-block;
    }

    span.glyphicon {
        padding: 5px;
    }

    .glyphicon-star-empty {
        color: #9d9d9d;
    }

    .glyphicon-star-empty, .glyphicon-star {
        font-size: 18px;
    }

    .glyphicon-star {
        color: #FD4;
        transition: all .25s;
    }

        .glyphicon-star:hover {
            transform: rotate(-15deg) scale(1.3);
        }
</style>



@using (Html.BeginForm("Create", "Posts", FormMethod.Post, new { enctype = "multiprt/form-data" }))
{
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit" style="margin-top:10px;">Add Post</button>
}
